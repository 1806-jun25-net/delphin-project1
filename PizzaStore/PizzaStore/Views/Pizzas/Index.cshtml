@model IEnumerable<PizzaStore.Models.Pizza>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            <h3>FirstName</h3>
        </th>
        <th>
            <h3>Location</h3>
        </th>
        <th>
            <h3>Size</h3>
        </th>
        <th>
           <h3>Crust Type</h3>
        </th>
        <th>
            <h3>Sauce</h3>
        </th>
